{{#> main}}
{{#*inline "content"}}
<div class="flex flex-col justify-center items-center min-h-screen pt-8 sm:pt-12 px-4">
  <div class="w-full max-w-md text-center">
    <img src="/logo-difffusion.webp" alt="difffusion logo" class="mx-auto mb-8 h-24">
    <h1 class="text-3xl sm:text-4xl font-bold text-gray-700 mb-10">Welcome!</h1>
    <p class="text-gray-600 mb-12">Please select an option to continue.</p>

    <div class="space-y-6">
      <a href="/user-entry" class="block w-full py-4 px-6 border border-transparent rounded-lg shadow-md
